<div class="pure-menu pure-menu-open pure-menu-horizontal">
<ul>
<li><%= link_to "Edit this wine!", edit_wine_path(@wine) %></li>

<li><%= link_to "Delete this wine!", :wine, method: :delete, data: { confirm: "Are you sure you want to delete this wine?"} %></li>

<li><%= link_to "Back to the list!", wines_path %></li>
</ul>
</div>

<h1> <%= @wine.name %> </h1>

  <h3>This is a <%= @wine.grape %> from <%= @wine.region %> and it was produced in <%= @wine.year %></h3> 

  <% if @wine.store %>

    <h3>It is sold by <%= @wine.store.name %>.</h3>

<% end %>

